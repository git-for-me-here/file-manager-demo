<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<VBox fx:id="mainPane" prefHeight="600.0" prefWidth="900.0" styleClass="mainPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="filemanagerdemo.MainSceneController">
    <children>
        <AnchorPane fx:id="controlPane" pickOnBounds="false" prefHeight="37.0" style="-fx-background-color: transparent;" visible="true">
            <children>
                <Label styleClass="appName-label" text="file-manager-demo"  AnchorPane.leftAnchor="37.0" AnchorPane.topAnchor="8.0" />
                <ImageView fitHeight="32.0" fitWidth="32.0" styleClass="logo" AnchorPane.topAnchor="3.5" />
                <Button fx:id="btnClose" onAction="#handleButtonClose" prefHeight="32.0" prefWidth="32.0" styleClass="btnClose" AnchorPane.rightAnchor="5.0" />
                <Button fx:id="btnResize" onAction="#handleButtonResize" prefHeight="32.0" prefWidth="32.0" styleClass="btnResize" AnchorPane.rightAnchor="37.0" />
                <Button fx:id="btnHide"  onAction="#handleButtonHide" prefHeight="32.0" prefWidth="32.0" styleClass="btnHide" AnchorPane.rightAnchor="70.0" />
            </children>
        </AnchorPane>
        <HBox fx:id="contentPane" style="-fx-background-color: rgba(81,90,97,0.7); -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <children>
                <TreeView fx:id="fileSystemTree" prefWidth="300.0" />
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>     
    
    <stylesheets>
        <URL value="@main.css"/>
    </stylesheets>
    
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
